rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // User documents
    match /users/{userId} {
      // Allow read for all authenticated users (for leaderboard)
      allow read: if isSignedIn();
      
      // Only Cloud Functions can write user data
      allow create, update, delete: if false;
    }
    
    // Prestige collection (managed by Cloud Functions only)
    match /prestige/{userId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Stats collection (for analytics - optional)
    match /stats/{document=**} {
      allow read: if false;
      allow write: if false; // Only Cloud Functions/Admin
    }
  }
}
